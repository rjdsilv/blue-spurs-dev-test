<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
	<Properties>
		<Property name="PID">??????</Property>
		<Property name="LOG_PATTERN">%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint} %clr{%5p} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n%xwEx</Property>
	</Properties>
	<Appenders>
		<Console name="Console-Appender" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="${LOG_PATTERN}"/>
		</Console>
		<RollingFile name="demo"
		             fileName="./logs/bluspurs/application.log"
		             filePattern="./logs/bluspurs/old/application.%d{yyyy-MM-dd_HH}.%i.log.gz">
			<PatternLayout>
				<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p --- [%15.15t] %-40.40c{1.} %m%n%xwEx</pattern>
			</PatternLayout>
			<TimeBasedTriggeringPolicy />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="org.springframework" level="INFO" additivity="false">
			<AppenderRef ref="SpringBoot-File-Appender"/>
			<AppenderRef ref="Console-Appender"/>
		</Logger>
		<Logger name="ca.bluespurs.bluespursapitest" level="DEBUG" additivity="false">
			<AppenderRef ref="User-Mgmt-File-Appender"/>
			<AppenderRef ref="Console-Appender"/>
		</Logger>
		<Root>
			<AppenderRef ref="Console-Appender"/>
		</Root>
	</Loggers>
</Configuration>